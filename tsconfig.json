{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",

    // 启用装饰器
    "experimentalDecorators": true,
    "paths": {
      "~lib/*": ["./src/lib/*"],
      "~main/*": ["./src/main/*"],
      "~renderer/*": ["./src/renderer/*"],
    }
  },
  "include": ["src/**/*", "./*.ts"]
}
